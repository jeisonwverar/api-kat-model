{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",  // Muestra errores si Prettier no está respetado
      "semi": ["error", "always"],   // Obliga el uso de punto y coma
      "quotes": ["error", "single"], // Comillas simples para las cadenas
      "space-before-function-paren": ["error", "never"] // Sin espacio antes de paréntesis de función
    }
  }
  